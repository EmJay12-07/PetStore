<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Order List</title>
</head>
<body>
<div class="container" style="margin-top: 120px;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">State</th>
                <th scope="col">Date</th>
                <th scope="col">Total Amount</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.orderId %></td>
                    <td><%= order.state %></td>
                    <td><%= order.createdAt %></td>
                    <td>Ksh<%= order.totalAmount.toFixed(2) %></td>
                    <td><button class="btn btn-primary view-details">View Details</button></td>
                </tr>
                <!-- Aggregate order items by productId -->
                <% let aggregatedItems = {}; %>
                <% order.items.forEach(item => { %>
                    <% if (aggregatedItems[item.productId]) { %>
                        <% aggregatedItems[item.productId].quantity += item.quantity; %>
                        <% aggregatedItems[item.productId].totalPrice += item.totalPrice; %>
                    <% } else { %>
                        <% aggregatedItems[item.productId] = { ...item }; %>
                    <% } %>
                <% }) %>
                <!-- Display aggregated items -->
                <% Object.values(aggregatedItems).forEach(aggregatedItem => { %>
                    <tr class="order-items-row">
                        <td colspan="5"> <!-- Span across all columns -->
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><%= aggregatedItem.productName %></td>
                                        <td>Ksh<%= aggregatedItem.productPrice.toFixed(2) %></td>
                                        <td><%= aggregatedItem.quantity %></td>
                                        <td>Ksh<%= aggregatedItem.totalPrice.toFixed(2) %></td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                <% }) %>
            <% }) %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
